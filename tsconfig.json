{
    "compilerOptions": {
      "allowJs": false,
      "esModuleInterop": true,
      "allowUnusedLabels": true,
      "experimentalDecorators": true,
      "declaration": true,
      "jsx": "react",
      "lib": ["dom", "es2015", "esnext"],
      "module": "commonjs",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "removeComments": true,
      "sourceMap": true,
      "strict": true,
      "target": "es2017",
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
      "src/**/*",
      "types/**/*"
    ],
}